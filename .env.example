# Database Connection Configuration
# Copy this file to .env and update with your actual credentials

# Option 1: Full connection string (easiest)
DB_CONNECTION_STRING=postgresql://username:password@your-server.company.com:5432/training_matrix

# Option 2: Individual parameters
# DB_HOST=your-server.company.com
# DB_PORT=5432
# DB_NAME=training_matrix
# DB_USER=your_username
# DB_PASSWORD=your_password

# SSL (set to 'true' for production servers)
DB_SSL=false

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
